#!/bin/bash
#SBATCH --time=24:00:00
#SBATCH --nodes=1                 # Number of nodes - do not modify
#SBATCH --ntasks-per-node=32
#SBATCH --mem=30G                 # Memory per node (in MB). Default 200M per CPU
#SBATCH --job-name="job"
#SBATCH --output=a%j.out
#SBATCH --error=a%j.err

source /home/software/materia/intel_lib/setvars.sh --force
export PW=/home/software/materia/qe-6.7.0/bin/pw.x
export I_MPI_PMI_LIBRARY=/usr/lib/x86_64-linux-gnu/libpmi2.so.0
export I_MPI_FABRICS=shm:dapl
###############################################################

###############################################################
srun --cpu-bind=core $PW -input $1 >> $2
###############################################################